<div class="container">
<h1>Séléction de T-shirts</h1>
<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group col-8 center">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-primary">
      <i class="fas fa-search"></i> Rechercher
    </button>
  </div>
<% end %>



<div class="row row-cols-1 row-cols-md-2 row-cols-md-3 row-cols-md-4 g-4">
<% @clothes.each do |clothe| %>
<div class="col">
    <div class="card">
      <%= image_tag "rouge brique.jpg", class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= clothe.name %></h5>
        <p class="card-text"><%= clothe.description %>Price: $<%= clothe.price %></p>
         <button type="button" class="btn btn-primary"><%= link_to "Ajouter au panier"%></button>
      </div>
    </div>
  </div>
<% end %>
</div>




