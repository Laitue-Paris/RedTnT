<div class="container">
  <h1>Bienvenue <%= @user.first_name %></h1>
  <div class="row justify-content-between">
    <div class="col-6 bg-light">
      <div class="card  bg-light mb-3" id="dashboard">
        <div class="row">
          <div class="col-md-4">
            <%= image_tag "utilisateur.png", class: "img-fluid radius-50"%>
          </div>
          <div class="col-md-8 align-content-center">
            <div class="card-body">
              <h5 class="card-title py-2">Nombres de locations effectuées : <span class="text-primary"><%= @user.rental_ids.count %></span></h5>
              <div class="text-center">
                <button class="btn btn-secondary">Historique</button>
              </div>
              <h5 class="card-title py-2">Nombres de locations en cours : <span class="text-secondary"><%= @rentals.count %></span></h5>
              <div class="text-center">
                <button class="btn btn-secondary">Mes locations en cours</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-3 bg-light text-center">
      <h2>Revenus</h2>
      <%= @total_rented.sum %>€
      <div class="mt-3">
        <button class="btn btn-primary">J'en veux plus</button>
      </div>
    </div>
    <div class="col-3 bg-light">
      3
    </div>
  </div>
  <%= render "clothes/form", clothe: @clothe %>
  <div class="row">
    <% @item_rented.each do |clothe| %>
      <div class="col-2 mt-2">
        <div class="card rounded">
        <%= link_to clothe_path(clothe) do %>
          <%= clothe&.photo.attached? ? cl_image_tag(clothe.photo.key) : image_tag('t-shirt.png', height: 200) %>
        <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= clothe.name %></h5>
            <p class="card-text"><%= clothe.description %></p>
            <div class="text-center">
              <%= link_to "Louez-moi", clothe_path(clothe), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <% @item_rented.each do |clothe| %>
      <div class="col-2 mt-2">
        <div class="card rounded">
        <%= link_to clothe_path(clothe) do %>
          <%= clothe&.photo.attached? ? cl_image_tag(clothe.photo.key) : image_tag('t-shirt.png', height: 200) %>
        <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= clothe.name %></h5>
            <p class="card-text"><%= clothe.description %></p>
            <div class="text-center">
              <%= link_to "Louez-moi", clothe_path(clothe), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
